<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <PackageId>Cosmos.Kernel.HAL</PackageId>
    <Title>Cosmos Kernel HAL</Title>
    <Description>Hardware abstraction layer interfaces for multi-architecture kernel development supporting x64, ARM64, and RISC-V architectures.</Description>
    <PackageTags>cosmos;kernel;hal;abstraction;architecture;x64;arm64;riscv;hardware;graphics</PackageTags>
    <RepositoryUrl>https://github.com/valentinbreiz/nativeaot-patcher</RepositoryUrl>
    <PackageProjectUrl>https://github.com/valentinbreiz/nativeaot-patcher</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Cosmos.Build.API\Cosmos.Build.API.csproj" />
    <ProjectReference Include="..\Cosmos.Build.Common\Cosmos.Build.Common.csproj" />
    <ProjectReference Include="..\Cosmos.Kernel.Core\Cosmos.Kernel.Core.csproj" />
    <ProjectReference Include="..\Cosmos.Kernel.HAL.Interfaces\Cosmos.Kernel.HAL.Interfaces.csproj" />
  </ItemGroup>

  <!-- Exclude architecture-specific files from default compilation -->
  <ItemGroup>
    <Compile Remove="PlatformHAL.*.cs" />
    <Compile Remove="Cpu\InterruptManager.*.cs" />
  </ItemGroup>

  <!-- Architecture-specific HAL references and files -->
  <ItemGroup Condition="'$(CosmosArch)' == 'x64'">
    <ProjectReference Include="..\Cosmos.Kernel.HAL.X64\Cosmos.Kernel.HAL.X64.csproj" />
    <Compile Include="PlatformHAL.X64.cs" />
    <Compile Include="Cpu\InterruptManager.X64.cs" />
  </ItemGroup>

  <ItemGroup Condition="'$(CosmosArch)' == 'arm64'">
    <ProjectReference Include="..\Cosmos.Kernel.HAL.ARM64\Cosmos.Kernel.HAL.ARM64.csproj" />
    <Compile Include="PlatformHAL.ARM64.cs" />
    <Compile Include="Cpu\InterruptManager.ARM64.cs" />
  </ItemGroup>
  
</Project>

