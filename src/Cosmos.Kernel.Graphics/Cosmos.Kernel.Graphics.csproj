<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Version>3.0.31</Version>
    <!-- Multi-arch package: built for both x64 and arm64 -->
    <IsMultiArchPackage>true</IsMultiArchPackage>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>

    <!-- Package Metadata -->
    <PackageId>Cosmos.Kernel.Graphics</PackageId>
    <Title>Cosmos Kernel Graphics</Title>
    <Description>Graphics support for Cosmos kernel development including Canvas rendering, Colors, and Font support.</Description>
    <PackageTags>cosmos;kernel;graphics;canvas;rendering;fonts;psf;colors;2d;framebuffer</PackageTags>
    <RepositoryUrl>https://github.com/valentinbreiz/nativeaot-patcher</RepositoryUrl>
    <PackageProjectUrl>https://github.com/valentinbreiz/nativeaot-patcher</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../Cosmos.Kernel.Boot.Limine/Cosmos.Kernel.Boot.Limine.csproj" />
    <ProjectReference Include="../Cosmos.Kernel.Core/Cosmos.Kernel.Core.csproj" PrivateAssets="none" />
  </ItemGroup>
  
  <ItemGroup>
    <EmbeddedResource Include="Fonts\DefaultFont.psf" />
  </ItemGroup>

  <!-- Multi-arch packaging support -->
  <Import Project="../Directory.MultiArch.targets" />
</Project>
