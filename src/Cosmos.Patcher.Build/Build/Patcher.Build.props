<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <ItemGroup>
    <PackageReference Include="Cosmos.Patcher"
                      Version="$(Version)"
                      GeneratePathProperty="true"/>
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="Cosmos.Patcher"
                      Version="$(Version)"
                      GeneratePathProperty="true"/>
  </ItemGroup>

  <PropertyGroup>
    <CosmosPatcherAssembly
      Condition="'$(CosmosPatcherAssembly)' == '' OR !Exists('$(CosmosPatcherAssembly)')">$(Cosmos_Patcher)\bin\Debug\net8.0\Cosmos.Patcher.Build.dll
    </CosmosPatcherAssembly>
    <CosmosPatcherAssembly
      Condition="'$(CosmosPatcherAssembly)' == '' OR !Exists('$(CosmosPatcherAssembly)')">$(Cosmos_Patcher)\bin\Debug\net8.0\Cosmos.Patcher.Build.dll
    </CosmosPatcherAssembly>
    <CosmosPatcherTasksAssembly
      Condition="'$(CosmosPatcherTasksAssembly)' == '' OR !Exists('$(CosmosPatcherTasksAssembly)')">$(MSBuildThisFileDirectory)\bin\Debug\net8.0\Cosmos.Patcher.Build.dll
    </CosmosPatcherTasksAssembly>
  </PropertyGroup>

  <UsingTask TaskName="Cosmos.Patcher.Build.PatcherTask" AssemblyFile="$(CosmosPatcherTasksAssembly)"/>
 
  <Target Name="RebuildReferences" BeforeTargets="BeforeCompile" AfterTargets="FindReferenceAssembliesForReferences">
    <ItemGroup>
      <ReferencePathWithRefAssemblies Remove="@(ReferencePathWithRefAssemblies)"/>
      <ReferencePath Remove="@(ReferencePath)"/>
    </ItemGroup>
  </Target>

</Project>
