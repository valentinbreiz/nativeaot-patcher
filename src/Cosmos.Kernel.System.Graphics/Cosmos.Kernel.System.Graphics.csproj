<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>

    <!-- Package Metadata -->
    <PackageId>Cosmos.Kernel.System.Graphics</PackageId>
    <Title>Cosmos Kernel Graphics System</Title>
    <Description>Graphics system for Cosmos kernel development including Canvas rendering, Colors, and Font support.</Description>
    <PackageTags>cosmos;kernel;graphics;canvas;rendering;fonts;psf;colors;2d</PackageTags>
    <RepositoryUrl>https://github.com/valentinbreiz/nativeaot-patcher</RepositoryUrl>
    <PackageProjectUrl>https://github.com/valentinbreiz/nativeaot-patcher</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../Cosmos.Kernel.Boot.Limine/Cosmos.Kernel.Boot.Limine.csproj" />
    <ProjectReference Include="../Cosmos.Kernel.Core/Cosmos.Kernel.Core.csproj" />
    <ProjectReference Include="../Cosmos.Kernel.System/Cosmos.Kernel.System.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <EmbeddedResource Include="Fonts\DefaultFont.psf" />
  </ItemGroup>
</Project>
