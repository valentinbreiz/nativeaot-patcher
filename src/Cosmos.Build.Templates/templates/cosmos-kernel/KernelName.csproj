<Project Sdk="Microsoft.NET.Sdk">

  <Sdk Name="Cosmos.Sdk" Version="3.0.20" />

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <!-- Target architecture (x64 or arm64) -->
    <CosmosArch>TargetArch</CosmosArch>
  </PropertyGroup>

  <!-- Core kernel packages -->
  <ItemGroup>
    <PackageReference Include="Cosmos.Kernel" Version="3.0.20" />
    <PackageReference Include="Cosmos.Kernel.System" Version="3.0.20" />
  </ItemGroup>

  <!--#if (EnableGraphics)-->
  <ItemGroup>
    <PackageReference Include="Cosmos.Kernel.Graphics" Version="3.0.20" />
  </ItemGroup>
  <!--#endif-->

</Project>
