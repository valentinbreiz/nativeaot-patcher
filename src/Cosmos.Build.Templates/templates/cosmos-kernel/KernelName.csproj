  <Sdk Name="Cosmos.Sdk" Version="3.0.24" />

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <!-- Architecture is auto-detected from RuntimeIdentifier (e.g., linux-x64, linux-arm64) -->
  </PropertyGroup>

  <!-- Core kernel packages -->
  <ItemGroup>
    <PackageReference Include="Cosmos.Kernel" Version="3.0.24" />
    <PackageReference Include="Cosmos.Kernel.System" Version="3.0.24" />
  </ItemGroup>

  <!--#if (EnableGraphics)-->
  <ItemGroup>
    <PackageReference Include="Cosmos.Kernel.Graphics" Version="3.0.24" />
  </ItemGroup>
  <!--#endif-->

</Project>
