<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>

    <!--pack as nuget-->
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <!-- This may need to change -->
    <DefineConstants>$(DefineConstants);NATIVEAOT;TARGET_64BIT</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="$(ToolCommonPath)Internal\NativeFormat\NativeFormat.cs">
      <Link>Internal\NativeFormat\NativeFormat.cs</Link>
    </Compile>
    <Compile Include="$(ToolCommonPath)Internal\Runtime\MethodTable.Constants.cs">
      <Link>Internal\Runtime\MethodTable.Constants.cs</Link>
    </Compile>
    <Compile Include="$(AotCommonPath)Internal\Runtime\MethodTable.cs">
      <Link>Internal\Runtime\MethodTable.cs</Link>
    </Compile>
    <Compile Include="$(AotRuntimeBasePath)System\Runtime\ExceptionIDs.cs">
      <Link>Internal\Runtime\ExceptionIDs.cs</Link>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Cosmos.Kernel.Core\Cosmos.Kernel.Core.csproj" />
    <ProjectReference Include="..\Cosmos.Build.API\Cosmos.Build.API.csproj" />
  </ItemGroup>

</Project>

