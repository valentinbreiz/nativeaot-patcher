<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>

    <!--pack as nuget-->
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <!-- Add any folder(s) where *.asm files exist -->
  <ItemGroup>
    <AsmSearchPath Include="./src/Asm/" />
    <!-- You can also do: <AsmFiles Include="/path/to/file.asm" /> -->
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Cosmos.Kernel.Core\Cosmos.Kernel.Core.csproj" />
    <ProjectReference Include="..\Cosmos.Build.API\Cosmos.Build.API.csproj" />
  </ItemGroup>

</Project>

