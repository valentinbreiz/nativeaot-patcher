<Project>  
  <Target Name="GetGCC" Condition="'$(OS)' == 'Windows_NT'">
   <Exec Command="where x86_64-elf-gcc" IgnoreExitCode="true" StandardOutputImportance="Low" ConsoleToMsBuild="true"
          Condition="$(GCCPath) ==''">
      <Output TaskParameter="ConsoleOutput" PropertyName="GCCPath" />
    </Exec>

    <Message Text="Using GCC for kernel compilation: $(GCCPath)" Importance="High" />
  </Target>
</Project>