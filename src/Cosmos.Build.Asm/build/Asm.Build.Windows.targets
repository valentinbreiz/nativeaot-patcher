<Project>
  <Target Name="GetYasm">
    <Exec Command="where yasm" IgnoreExitCode="true" StandardOutputImportance="Low" ConsoleToMsBuild="true">
      <Output TaskParameter="ConsoleOutput" PropertyName="YasmPaths" />
    </Exec>

    <PropertyGroup>
      <YasmPath>$('$(YasmPaths)'.Split(';')[0].Trim())</YasmPath>
    </PropertyGroup>
  </Target>
</Project>