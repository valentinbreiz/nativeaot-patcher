{
  "name": "cosmos-vscode",
  "displayName": "Cosmos OS Development",
  "description": "VS Code extension for Cosmos OS kernel development with NativeAOT",
  "version": "1.0.0",
  "publisher": "cosmosos",
  "repository": {
    "type": "git",
    "url": "https://github.com/valentinbreiz/nativeaot-patcher"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Other"
  ],
  "keywords": [
    "cosmos",
    "kernel",
    "os",
    "nativeaot",
    "bare-metal",
    "debugger"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "extensionDependencies": [
    "ms-vscode.cpptools"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cosmos",
          "title": "Cosmos OS",
          "icon": "media/cosmos-icon.svg"
        }
      ]
    },
    "views": {
      "cosmos": [
        {
          "id": "cosmos.welcome",
          "name": "Welcome",
          "when": "!cosmos:isCosmosProject"
        },
        {
          "id": "cosmos.project",
          "name": "Project",
          "when": "cosmos:isCosmosProject"
        },
        {
          "id": "cosmos.tools",
          "name": "Tools",
          "when": "cosmos:isCosmosProject"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "cosmos.welcome",
        "contents": "Welcome to Cosmos OS Development!\n\nCreate your first bare-metal C# kernel.\n\n[Create Kernel Project](command:cosmos.newProject)\n\nOr open an existing Cosmos project folder.\n\n[Open Folder](command:vscode.openFolder)"
      }
    ],
    "commands": [
      {
        "command": "cosmos.newProject",
        "title": "Create Kernel Project",
        "icon": "$(add)",
        "category": "Cosmos"
      },
      {
        "command": "cosmos.checkTools",
        "title": "Check Tools",
        "icon": "$(checklist)",
        "category": "Cosmos"
      },
      {
        "command": "cosmos.installTools",
        "title": "Install Tools",
        "icon": "$(cloud-download)",
        "category": "Cosmos"
      },
      {
        "command": "cosmos.build",
        "title": "Build Kernel",
        "icon": "$(gear)",
        "category": "Cosmos"
      },
      {
        "command": "cosmos.run",
        "title": "Run in QEMU",
        "icon": "$(play)",
        "category": "Cosmos"
      },
      {
        "command": "cosmos.debug",
        "title": "Debug in QEMU",
        "icon": "$(debug-alt)",
        "category": "Cosmos"
      },
      {
        "command": "cosmos.clean",
        "title": "Clean Build",
        "icon": "$(trash)",
        "category": "Cosmos"
      },
      {
        "command": "cosmos.refreshTools",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "Cosmos"
      },
      {
        "command": "cosmos.projectProperties",
        "title": "Project Properties",
        "icon": "$(settings-gear)",
        "category": "Cosmos"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "cosmos.refreshTools",
          "when": "view == cosmos.tools",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "cosmos.build",
          "when": "viewItem == buildAction",
          "group": "inline"
        },
        {
          "command": "cosmos.run",
          "when": "viewItem == runAction",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Cosmos OS",
      "properties": {
        "cosmos.defaultArchitecture": {
          "type": "string",
          "default": "x64",
          "enum": ["x64", "arm64"],
          "description": "Default target architecture for kernel builds"
        },
        "cosmos.qemuMemory": {
          "type": "string",
          "default": "512M",
          "description": "Memory allocation for QEMU emulator"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "dependencies": {
    "glob": "^10.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@types/glob": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  }
}
