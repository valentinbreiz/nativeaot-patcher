#!/bin/sh
echo "ðŸ”„ Running pre-commit hook: Formatting commit files..."

git diff --name-only --diff-filter=AM | while read file; do
    if [[ $file == *.cs ]]; then
        echo "Formatting changes in $file"
        
        dotnet format "$file"
        git add "$file"
    fi
done

echo "âœ… Commit files formatted."
